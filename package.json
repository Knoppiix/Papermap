{
	"name": "papermap",
	"version": "1.0.0",
	"description": "The Papermap website.",
	"type": "module",
	"scripts": {
		"dev": "node ./scripts/clean.js && svelte-kit sync && cross-env NEW_RELIC_ENABLED=false vite dev",
		"build": "cross-env NODE_ENV=production node ./scripts/clean.js && svelte-kit sync && vite build",
		"start": "cross-env NODE_ENV=production node server.js",
		"deploy": "node ./scripts/clean.js && docker compose build && docker compose up -d --force-recreate && docker system prune -af --volumes",
		"clean": "docker stop $(docker ps -a -q); docker rm $(docker ps -a -q); docker system prune -af --volumes; node ./scripts/clean.js",
		"discord": "node ./scripts/discord.js",
		"search": "node ./scripts/search.js",
		"find-more": "node ./scripts/find_more.js",
		"migration": "node ./scripts/migration.js",
		"format": "eslint . --fix",
		"format-check": "eslint .",
		"prepare": "husky"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/angeluriot/Papermap.git"
	},
	"keywords": [
		"paper",
		"map",
		"science"
	],
	"author": "Angel Uriot",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/angeluriot/Papermap/issues"
	},
	"homepage": "https://papermap.org",
	"dependencies": {
		"@faker-js/faker": "^9.6.0",
		"@octokit/auth-app": "^7.1.5",
		"@octokit/rest": "^21.1.1",
		"@resvg/resvg-js": "^2.6.2",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"autoprefixer": "^10.4.21",
		"clone-deep": "^4.0.1",
		"color": "^5.0.0",
		"cross-env": "^10.0.0",
		"deep-equal": "^2.2.3",
		"discord.js": "^14.19.3",
		"dotenv": "^16.5.0",
		"echarts": "^6.0.0",
		"ejs": "^3.1.10",
		"express": "^5.1.0",
		"flexsearch": "^0.8.151",
		"fuse.js": "^7.1.0",
		"husky": "^9.1.7",
		"newrelic": "^13.2.1",
		"postcss": "^8.5.4",
		"rate-limiter-flexible": "^5.0.5",
		"request-ip": "^3.3.0",
		"seedrandom": "^3.0.5",
		"sharp": "^0.33.5",
		"svelte": "^5.0.0",
		"tailwindcss": "^4.0.0",
		"ua-parser-js": "^2.0.3",
		"vite": "^6.0.0",
		"vite-plugin-devtools-json": "^0.1.0",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.22.0",
		"@stylistic/eslint-plugin": "^5.4.0",
		"@types/clone-deep": "^4.0.4",
		"@types/deep-equal": "^1.0.4",
		"@types/ejs": "^3.1.5",
		"@types/newrelic": "^9.14.8",
		"@types/node": "^22",
		"@types/pg": "^8.15.1",
		"@types/request-ip": "^0.0.41",
		"@types/seedrandom": "^3.0.8",
		"eslint": "^9.22.0",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-svelte": "^3.0.0",
		"eslint-plugin-unicorn": "^61.0.2",
		"eslint-plugin-unused-imports": "^4.2.0",
		"globals": "^16.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0"
	}
}
