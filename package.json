{
	"name": "papermap",
	"version": "1.0.0",
	"description": "The Papermap website.",
	"type": "module",
	"scripts": {
		"dev": "node ./scripts/clean.js --force && vite dev",
		"dev-build": "node ./scripts/clean.js --force && svelte-kit sync && vite build",
		"prod-build": "node ./scripts/clean.js --keep-lock && svelte-kit sync && vite build",
		"deploy": "node ./scripts/clean.js && node ./scripts/lock.js && docker compose build && docker compose up -d && node ./scripts/unlock.js",
		"clean": "docker stop $(docker ps -a -q); docker rm $(docker ps -a -q); docker system prune -a; node ./scripts/clean.js --force"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/angeluriot/Papermap.git"
	},
	"keywords": [
		"paper",
		"map",
		"science"
	],
	"author": "Angel Uriot",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/angeluriot/Papermap/issues"
	},
	"homepage": "https://papermap.org",
	"dependencies": {
		"@octokit/auth-app": "^7.1.5",
		"@octokit/rest": "^21.1.1",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"sharp": "^0.33.5",
		"svelte": "^5.0.0",
		"tailwindcss": "^4.0.0",
		"vite": "^6.0.0"
	},
	"devDependencies": {
		"@types/node": "^22.13.4",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0"
	}
}
